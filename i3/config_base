set $mod Mod4
font pango: System San Francisco Display Bold 8
floating_modifier $mod
mouse_warping none

bindsym $mod+Shift+q kill
bindsym $mod+Shift+r restart

# Window focus/move
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Fullscreen/split toggle & layouts
bindsym $mod+f fullscreen toggle
bindsym $mod+v split toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle/focus for tiling/floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Switch to workspace
bindsym $mod+1 workspace 1b, workspace 1
bindsym $mod+2 workspace 2b, workspace 2
bindsym $mod+3 workspace 3b, workspace 3
bindsym $mod+4 workspace 4b, workspace 4
bindsym $mod+5 workspace 5b, workspace 5
bindsym $mod+6 workspace 6b, workspace 6
bindsym $mod+7 workspace 7b, workspace 7
bindsym $mod+8 workspace 8b, workspace 8
bindsym $mod+9 workspace 9b, workspace 9
bindsym $mod+n workspace  Spotify
bindsym $mod+m workspace  Mail
bindsym $mod+c workspace  WhatsApp
bindsym $mod+BackSpace workspace ...

# Which monitor to output workspace on
workspace 1 output DVI-I-1
