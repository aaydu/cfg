#!/bin/python
import requests as R

l = 'Aachen' # location

t = R.get('http://wttr.in/{loc}?format=%t').text # temperature
s = R.get('http://wttr.in/{loc}?format=%c').text # weather symbol

if len(t) > 10 | len(s) > 10: # probably error response
    print(l+ ': ?'); exit(0)

icons = { '☀️': '', # replace ugly icons
          '⛅️': '',
          '🌦': '',
          '🌧': '',
          '🌩': '',
          '⛈': '',
          '🌫': '',
          '🌨': ''}

s = icons[s] if s in icons else s

print(l+': '+s+t)
print(l+': '+s+t)
