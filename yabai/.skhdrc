# key remapping
rcmd - h : skhd -k "left"
rcmd - j : skhd -k "down"
rcmd - k : skhd -k "up"
rcmd - l : skhd -k "right"
rcmd + ctrl - h : skhd -k "alt - left"
rcmd + ctrl - j : skhd -k "alt - down"
rcmd + ctrl - k : skhd -k "alt - up"
rcmd + ctrl - l : skhd -k "alt - right"
ctrl - backspace : skhd -k "alt - backspace"
rcmd - 1 : skhd -k "f1"
rcmd - 2 : skhd -k "f2"
rcmd - 3 : skhd -k "f3"
rcmd - 4 : skhd -k "f4"
rcmd - 5 : skhd -k "f5"

ctrl - v [
    * : skhd -k "cmd - v"
    "terminal" ~
    "iterm2" ~
]

ctrl - c [
    * : skhd -k "cmd - c"
    "terminal" ~
    "iterm2" ~
]

ctrl - x [
    * : skhd -k "cmd - x"
    "terminal" ~
    "iterm2" ~
]

ctrl - a [
    * : skhd -k "cmd - a"
    "terminal" ~
    "iterm2" ~
]

ctrl - z [
    * : skhd -k "cmd - z"
    "terminal" ~
    "iterm2" ~
]

ctrl - y [
    * : skhd -k "cmd - y"
    "terminal" ~
    "iterm2" ~
]

ctrl - r [
    * : skhd -k "cmd - r"
    "terminal" ~
    "iterm2" ~
]

ctrl - s [
    * : skhd -k "cmd - s"
    "terminal" ~
    "iterm2" ~
]

# some shortcuts
#cmd - return : open -na /System/Applications/Utilities/Terminal.app
cmd - return : open -na /Applications/iterm.app
cmd + ctrl - 1 : open ~
cmd + ctrl - 2 : open -na /Applications/Firefox.app
cmd + ctrl - 2 : open -na /Applications/Firefox.app --args -private-window
cmd + shift - q : yabai -m window --close
cmd - p : screencapture -icP
cmd + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# focus space
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6

# focus window
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap managed window
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# send to space
cmd + shift - 1 : yabai -m window --space 1 #; yabai -m space --focus 2
cmd + shift - 2 : yabai -m window --space 2 #; yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space 3 #; yabai -m space --focus 2
cmd + shift - 4 : yabai -m window --space 4 #; yabai -m space --focus 2
cmd + shift - 5 : yabai -m window --space 5 #; yabai -m space --focus 2
cmd + shift - 6 : yabai -m window --space 6 #; yabai -m space --focus 2

# focus monitor
# ctrl + alt - z  : yabai -m display --focus prev
# ctrl + alt - 3  : yabai -m display --focus 3

# send window to monitor and follow focus
# ctrl + cmd - c  : yabai -m window --display next; yabai -m display --focus next
# ctrl + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1

# increase window size
cmd + ctrl - h : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
cmd + ctrl - j : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
cmd + ctrl - k : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
cmd + ctrl - l : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0

# toggle window zoom
cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
lcmd - w : yabai -m window --toggle split

# float / unfloat window and center on screen
cmd - space : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2

alt - w : skhd -k "rcmd - w"

